{
  "$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "files": {
    "includes": [
      "**",
      "!**/dist/**/*",
      "!**/node_modules/**/*",
      "!**/*.tsconfig.json",
      "!**/migrations/**/*",
      "!**/out/**/*",
      "!**/.next/**/*",
      "!**/.turbo/**/*",
      "!**/generated/**/*",
      "!**/_deprecated/**/*",
      "!**/.snaplet/**/*",
      "!**/pnpm-lock.yaml",
      "packages/scripts/src/migrations/**/*"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noSvgWithoutTitle": "off"
      },
      "correctness": {
        "noUnusedImports": "error"
      }
    }
  },
  "formatter": {
    "indentStyle": "space"
  }
}
