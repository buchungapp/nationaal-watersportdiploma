{
  "name": "@nawadi/nationaal-watersportdiploma",
  "private": true,
  "packageManager": "pnpm@9.15.5",
  "scripts": {
    "spelling": "cspell",
    "formatting": "pnpm biome check ./",
    "formatting:fix": "pnpm biome check ./ --write",
    "clean:packages": "turbo run clean --filter=./packages/*",
    "build:packages": "turbo run build --filter=./packages/*",
    "watch:packages": "turbo run dev --filter=./packages/*",
    "initialize": "node ./scripts/initialize.js",
    "db:reset": "node ./scripts/reset-migrate-local-db.js",
    "db:seed": "node ./scripts/seed-local-db.js",
    "test": "turbo run test --filter=@nawadi/api --filter=@nawadi/core --filter=@nawadi/db --filter=@nawadi/lib --filter=@nawadi/scripts"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@cspell/dict-nl-nl": "2.4.2",
    "cspell": "9.6.3",
    "turbo": "2.8.3"
  },
  "pnpm": {
    "overrides": {
      "postgres": "catalog:",
      "drizzle-orm": "catalog:",
      "@types/react": "catalog:",
      "@types/react-dom": "catalog:",
      "@types/pg": "catalog:",
      "pg": "catalog:",
      "tar": ">=7.5.7",
      "tar-fs": ">=3.1.1",
      "form-data": ">=4.0.4"
    }
  }
}
