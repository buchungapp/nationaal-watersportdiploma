{
  "name": "@nawadi/nationaal-watersportdiploma",
  "private": true,
  "packageManager": "pnpm@9.15.5",
  "scripts": {
    "spelling": "cspell",
    "formatting": "pnpm biome check ./",
    "formatting:fix": "pnpm biome check ./ --write",
    "packages:clean": "pnpm --recursive --filter {packages/**} clean",
    "packages:build": "pnpm --recursive --filter {packages/**} build",
    "packages:watch": "pnpm --recursive --parallel --filter {packages/**} watch",
    "initialize": "node ./scripts/initialize.js",
    "db:reset": "node ./scripts/reset-migrate-local-db.js",
    "db:seed": "node ./scripts/seed-local-db.js",
    "test": "pnpm --recursive test"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@cspell/dict-nl-nl": "^2.3.0",
    "cspell": "^8.14.4"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "catalog:",
      "@types/react-dom": "catalog:",
      "cookie@<0.7.0": ">=0.7.0",
      "@octokit/request-error@>=1.0.0 <5.1.1": ">=5.1.1",
      "@octokit/request@>=1.0.0 <9.2.1": ">=9.2.1",
      "@octokit/plugin-paginate-rest@>=1.0.0 <11.4.1": ">=11.4.1",
      "esbuild@<=0.24.2": ">=0.25.0",
      "axios@<1.8.2": ">=1.8.2"
    }
  }
}
